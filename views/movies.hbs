<div class="container">
  <div class="row">
    {{#each movies}}
      <div class="col-md-4">
        <div class="card mb-4" style="width: 18rem;">
          <img src="{{this.image}}" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">Card title</h5>
            <p class="card-text">{{this.title}}</p>
            <a href="/movies/{{_id}}" class="btn btn-primary">See more</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
